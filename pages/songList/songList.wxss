/* pages/songList/songList.wxss */



.top-list-info {
  height: 40vh;
  width: 100vw;
  position: relative;
  text-align: center;
}

.top-list-bg {
  width: 100%;
  height: 100%;
}

.top-list-content {
  display: flex;
  flex-direction: column;
  padding: 15rpx 0;
}

.top-list-item {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  align-content: center;
  padding: 10rpx 40rpx;
  border-bottom: 2rpx solid rgb(235, 234, 234);
}

.song-info {
  width: 60vw;
  padding: 0 25rpx;
  color: darkslategrey;
  font-size: 30rpx;
  letter-spacing: 2.5rpx
}

.song-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.song-singer {
  color: rgb(179, 179, 179);
  font-size: 25rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}

.song-name {
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}


.rank {
  width: 60rpx;
  color: rgb(179, 179, 179);
  font-size: 35rpx;
  padding: 0 10rpx;
  text-align: center;
}
