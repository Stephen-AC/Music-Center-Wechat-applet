/* pages/songList/songList.wxss */
.header {
  width: 100vw;
  background-color: #dc4238;
  padding: 20rpx 0rpx;
}

.search-box {
  width: 90%;
  height: 65rpx;
  margin: 0 auto;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background-color: rgba(255, 190, 190, 0.432)
}

.placehoder-class{
  font-size: 30rpx;
  color: #ecf0f1;
}

.search-input {
  width: 90%;
  font-size: 30rpx;
  color: #f1f2f6;
  text-align: center;
}

.search-img {
  display: block;
  float: right;
  width: 65rpx;
}

.top-list-content {
  display: flex;
  flex-direction: column;
  padding: 15rpx 0;
}

.top-list-item {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  align-content: center;
  padding: 10rpx 40rpx;
  border-bottom: 2rpx solid rgb(235, 234, 234);
}

.song-info {
  width: 80vw;
  padding: 0 25rpx;
  color: darkslategrey;
  font-size: 30rpx;
  letter-spacing: 2.5rpx
}

.song-name {
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}

.song-singer {
  color: rgb(179, 179, 179);
  font-size: 25rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}

