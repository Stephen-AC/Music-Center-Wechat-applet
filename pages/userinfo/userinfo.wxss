/* pages/userinfo/userinfo.wxss */
.unauthc {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-size:cover;
}

.unauthc-context {
  height: 340rpx;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0c2;
  border-radius: 20rpx;
}

.unauthc-title {
  font-size: 55rpx;
  margin-bottom: 30rpx;
  color: darkslategray;
}

.unauthc-btn {
  background-color: #dc4238;
}

.authc {
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}

.avatar {
  margin: 40rpx auto;
}

.alias {
  margin-bottom: 30rpx;
  font-size: 50rpx;
  padding: 0;
}


.about-music {
  width: 100vw;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}

.about-music-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-info {
  width: 100vw;
}

.btn-group {
  display: flex;
  flex-direction: row;
  margin: 40rpx auto;
}

.edit-info {
  margin-right: 40rpx;
}


